<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="380dp"
    android:layout_height="180dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="15dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="10dp"
        android:layout_height="match_parent"

        android:backgroundTint="@color/purple_200"
        android:background="@color/purple_200"
        android:orientation="horizontal" />


    <LinearLayout
        android:layout_width="367dp"
        android:layout_height="26dp"
        android:layout_marginBottom="50dp"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"

            android:gravity="center"
            android:text="N.° Orden:"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/numero_orden"
            android:layout_width="229dp"
            android:layout_height="match_parent"

            android:gravity="left|center"
            android:text="23142422"
            android:textColor="@color/black"
            android:textSize="13dp" />


        <TextView
            android:id="@+id/hora_inicio"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:gravity="left|center"
            android:text="10:30"
            android:textColor="@color/text"
            android:textSize="13dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/lnNombrePrestacion"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="36dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="82dp"
            android:layout_height="match_parent"

            android:gravity="center"
            android:text="Prestación:"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/nombre_prestaciones"
            android:layout_width="288dp"
            android:layout_height="match_parent"

            android:gravity="left|center"
            android:text="Ecografía pélvica, Ecografía Vascular"
            android:textColor="@color/black"
            android:textSize="13dp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="365dp"
        android:layout_height="26dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="83dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="55dp"
            android:layout_height="match_parent"

            android:gravity="center"
            android:text="Dr(a):"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/nombre_doctor"
            android:layout_width="269dp"
            android:layout_height="match_parent"

            android:gravity="left|center"
            android:text="Villao Plúas Alberto Jesús"
            android:textColor="@color/black"
            android:textSize="13dp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="111dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="76dp"
            android:layout_height="match_parent"

            android:gravity="center"
            android:text="Paciente:"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/nombre_paciente"
            android:layout_width="273dp"
            android:layout_height="match_parent"

            android:gravity="left|center"
            android:text="Andrea Valeria Vera Terán / 0999999999"
            android:textColor="@color/black"
            android:textSize="13dp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:layout_marginLeft="265dp"
        android:layout_marginTop="141dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_ver_detalle"
            android:layout_width="100dp"
            android:layout_height="36dp"

            android:gravity="left|center"
            android:text="Ver Orden"
            android:textColor="@color/white"
            android:textSize="10dp" />


    </LinearLayout>








</androidx.cardview.widget.CardView>