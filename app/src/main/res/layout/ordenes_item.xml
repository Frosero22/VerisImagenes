<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="390dp"
    android:layout_height="300dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="15dp"
    app:contentPadding="10dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="center"
        android:text="Ã“rdenes Existentes"
        android:textColor="#0874CC"
        android:textSize="15dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="367dp"
        android:layout_height="26dp"
        android:layout_marginTop="30dp"
        android:background="@color/fondo"
        android:orientation="horizontal">

        <TextView
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"

            android:gravity="center"
            android:text="Paciente:"
            android:textColor="@color/black"
            android:textSize="12dp" />


        <TextView
            android:id="@+id/nombre_paciente"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"

            android:gravity="center|left"
            android:text="Francesco Antonio Villacis Rosero"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:textSize="11dp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="Elige la orden que deseas previsualizar"
        android:textColor="@color/text"
        android:textSize="15dp"
        android:textStyle="bold" />


    <GridView
        android:id="@+id/ordenes_existentes"
        android:layout_width="wrap_content"
        android:layout_height="100dp"

        android:layout_marginTop="100dp"
        android:verticalSpacing="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.617"
        tools:listitem="@layout/ordenes_items">

    </GridView>


    <Button
        android:id="@+id/btn_vizualizar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Previsualizar"
        android:textSize="10dp"
        android:layout_marginTop="200dp" />

    <Button
        android:id="@+id/btn_cerrar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="cerrar"
        android:textSize="10dp"
        android:layout_marginTop="240dp" />



</androidx.cardview.widget.CardView>